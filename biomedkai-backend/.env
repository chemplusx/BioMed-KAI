# Application Settings
APP_NAME=MedicalAIAgent
APP_ENV=development
APP_DEBUG=false
APP_PORT=8080
WEBSOCKET_PORT=8081

# Model Configuration
MODEL_PATH=H:\workspace\NEXIS\src\models\llama-3-1-8b-instruct-f16.gguf
CONTEXT_SIZE=65536
GPU_LAYERS=35
THREADS=8
BATCH_SIZE=512

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSION=1536

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=medical_ai
POSTGRES_USER=medical_user
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# API Keys
GOOGLE_SEARCH_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
PUBMED_API_KEY=your-pubmed-api-key
CLINICALTRIALS_API_KEY=your-clinicaltrials-key
DRUGBANK_API_KEY=your-drugbank-key

# LangSmith Configuration
LANGSMITH_API_KEY=your-langsmith-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=medical-ai-agent

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-byte-encryption-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
# GRAFANA_ENABLED=true
# GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/medical_ai.log

# HIPAA Compliance
# HIPAA_AUDIT_ENABLED=true
# HIPAA_ENCRYPTION_ENABLED=true
# PHI_RETENTION_DAYS=2555

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_EMERGENCY_TRIAGE=true
ENABLE_HUMAN_REVIEW=true
CONFIDENCE_THRESHOLD=0.7